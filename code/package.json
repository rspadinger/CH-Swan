{
  "name": "dria-contracts",
  "version": "0.1.0",
  "description": "Dria L2 contracts",
  "repository": "git@github.com:firstbatchxyz/dria-contracts.git",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:cov": "npx hardhat coverage --solcoverjs solcover.ts",
    "compile": "npx hardhat compile",
    "check": "tsc --noEmit",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint ./test",
    "lint": "yarn lint:sol && yarn lint:ts",
    "slith": "slither .",
    "docs": "rm -rf ./docs/contracts && npx hardhat docgen",
    "node": "npx hardhat node",
    "clear": "rm -r artifacts/ cache/ coverage/ typechain-types/",
    "postinstall": "yarn compile"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.9",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "^3.2.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "eciesjs": "^0.4.7",
    "eslint": "^9.7.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.3",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.12.4",
    "hardhat-gas-reporter": "^2.2.1",
    "hardhat-ignition": "^0.0.1",
    "solhint": "^5.0.1",
    "solidity-coverage": "^0.8.0",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  },
  "prettier": {
    "printWidth": 120
  }
}
